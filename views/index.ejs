<%- include('./partials/header.ejs') %>

<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img
        src="images/writing-picture.jpg"
        class="d-block mx-lg-auto img-fluid"
        alt="Writing Gif"
        width="500"
        height="500"
        loading="lazy"
        style="border-radius: 30px"
      />
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-white lh-1 mb-3">
        Welcome To InkWave!
      </h1>
      <p class="lead text-white">
        where words flow like waves, and creativity knows no bounds! Whether
        you're a writer, blogger, or just someone with a story to tell, this is
        your space to express, explore, and inspire.
      </p>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="p-5 text-center rounded-3">
    <h2 class="text-white">Your Writing</h2>
    <div
      class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center"
    >
      <div class="list-group">
        <% if (posts.length > 0) { %> <% posts.forEach((post, index) => { %>
        <a
          href="/post/<%= index %>"
          class="list-group-item list-group-item-action d-flex gap-3 py-3 text-start"
        >
          <div class="d-flex flex-column w-100">
            <h6 class="mb-0"><%= post.title %></h6>
            <p class="mb-0 opacity-75">
              <%= post.content.substring(0, 50) %>...
            </p>
          </div>
          <small class="opacity-50 text-nowrap"><%= post.time %></small>
        </a>
        <% }); %> <% } else { %>
        <p class="text-white text-center">No posts yet. Start writing now!</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
